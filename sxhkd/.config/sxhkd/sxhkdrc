#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + d
	dmenu_run -i  -l 6  -c -h 15  -fn "JetBrainsMono Nerd Font"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
        bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	 bspc desktop -l next

# send the newest marked node to the newest preselected node
#super + y
	# bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#
#trying some new stuff

super + f
        bspc node -t fullscreen
super + t
        bspc node -t tiled
# # set the window state
super + shift + @space
	bspc node -t floating

ctrl + alt + k
        setxkbmap fr
#
# # set the node flags
# super + ctrl + {m,x,y,z}
# 	bspc node -g {marked,locked,sticky,private}
#
# #
# # focus/swap
# #
#
# # focus the node in the given direction
super + {_,shift + }{h,j,k,l}
 	bspc node -{f,s} {west,south,north,east}

# # focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}
#
# focus the next/previous node in the current desktop
alt + Tab
 	bspc node -f next.local.window
alt + shift + Tab
 	bspc node -f prev.local.window
#
# focus the next/previous desktop in the current monitor
# super + bracket{left,right}
# 	bspc desktop -f {prev,next}.local
#
# focus the last node/desktop
super + Tab
 	bspc desktop -f last
#
# # focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on
#
# # focus or send to the given desktop
super + {_,shift }+{1,2,3,4,5,6,7,8,9,0}
	bspc {desktop -f,node -d} {1-9,0}
# # preselect
# #
#
# preselect the direction
# super + ctrl + {h,j,k,l}
# 	bspc node -p {west,south,north,east}
#
# # preselect the ratio
# super + ctrl + {1-9}
# 	bspc node -o 0.{1-9}
#
# # cancel the preselection for the focused node
# super + ctrl + space
# 	bspc node -p cancel
#
# # cancel the preselection for the focused desktop
# super + ctrl + shift + space
# 	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
#
# #
# # move/resize
# #
#
# expand a window by moving one of its side outward
#super + alt + {h,j,k,l}
#	bspc node -z {left -30 0,bottom 0 30,top 0 -30,right 30 0}

# contract a window by moving one of its side inward
#super + alt + shift + {h,j,k,l}
#	bspc node -z {right -30 0,top 0 30,bottom 0 -30,left 30 0}
#

super + alt + h
	bspc node -z left -30 0 ; bspc node -z right -30 0
super + alt + l
	bspc node -z right 30 0 ; bspc node -z left 30 0
super + alt +j
	bspc node -z top 0 30  ; bspc node -z bottom 0 30 
super + alt +k
	bspc node -z bottom  0 -30 ; bspc node -z top 0 -30 




#Focus floating window
super + space
	bspc node -f last.floating

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-30 0,0 30,0 -30,30 0}

super + e 
         dmenuunicode

alt + shift+ t
        ./dl/tor/Browser/start-tor-browser

alt + shift+ n
        alacritty -e nnn -d -C
alt + n
        nautilus
alt + s
        signal-desktop
Print
	screeny
alt + Print
	screeny -s
super + Print
	screeny -f


XF86AudioRaiseVolume
        pactl set-sink-volume 0 +5% #increase sound volume
ctrl + alt + Up
        pactl set-sink-volume 0 +5% #increase sound volume
XF86AudioLowerVolume
        pactl set-sink-volume 0 -5% #decrease sound volume
ctrl + alt + Down
        pactl set-sink-volume 0 -5% #decrease sound volume
XF86AudioMute
        pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
XF86MonBrightnessUp
        xbacklight -inc 5 # increase screen brightness
XF86MonBrightnessDown
        xbacklight -dec 5 # decrease screen brightness

#ad controls
#XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad

#player controls
XF86AudioPlay
        playerctl play
XF86AudioPause
        playerctl pause
XF86AudioNext
        playerctl next
XF86AudioPrev
        playerctl previous
# Pause audio
super + p
	mpc toggle
# Changes to next/previous tracks
super + {less,greater}
	mpc {prev,next}
# Restart track
# Seek foward in song
super +  comma
	mpc seek -10
# Seek backward in song
super +  semicolon
	mpc seek +10

# Manage Displays
super + F1
	display-1
super + F2
	display-2
super + F3
	display-3

super + F4
        dmenu_display
